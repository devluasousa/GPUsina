import qrcode

# Substitua YOUR_APP_URL pela URL do seu aplicativo no Heroku ou outra plataforma de hospedagem
url = "https://YOUR_APP_URL"

# Criar um objeto QR Code
qr = qrcode.QRCode(
    version=1,
    error_correction=qrcode.constants.ERROR_CORRECT_L,
    box_size=10,
    border=4,
)

# Adicionar a URL ao QR Code
qr.add_data(url)
qr.make(fit=True)

# Criar uma imagem do QR Code
img = qr.make_image(fill='black', back_color='white')

# Salvar a imagem do QR Code
img.save("qr_code.png")

print("QR Code gerado com sucesso e salvo como 'qr_code.png'.")
